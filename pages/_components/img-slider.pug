
<!-- Link Swiper's CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css"/>

<!-- Demo styles -->
<style>
.
    .gallary-swiper-parent {
    user-select: none;
    position: relative;
    height: 420px;
    width: 100%;
    font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
    font-size: 14px;
    color: #000;
    margin: 0 0 16px 0;
    direction: rtl;
    padding: 0;
    }
    

    .gallary-swiper-parent .swiper {
    width: 100%;
    height: 300px;
    margin-left: auto;
    margin-right: auto;
    }

    .gallary-swiper-parent .swiper-slide {
    background-size: cover;
    background-position: center;
    border-radius: 16px;
    overflow: hidden;
    min-height: 105px;
    }

    .myGallarySwiper2 {
    height: 70%;
    width: 100%;
    }

    .gallary-swiper-parent .myGallarySwiper {
        direction: ltr;
        height: 30%;
        width: 100%;
        box-sizing: border-box;
        padding: 20px 0px;
        position: relative;
    }
    .myGallarySwiper::after{
        position: absolute;
        top: 0px;
        bottom: 0px;
        right: 0px;
        content: "-";
        background: linear-gradient(to right, transparent,white);
        color: white;
        display: inline-block;
        width: 30px;
        z-index: 21;
    }

    .myGallarySwiper .swiper-slide {
    width: 25%;
    min-width: 140px;
    height: 100%;
    opacity: 0.4;
    }

    .myGallarySwiper .swiper-slide-thumb-active {
    opacity: 1;
    }

    .gallary-swiper-parent .swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    }
    .gallary-swiper-parent .swiper-button-next, .gallary-swiper-parent .swiper-button-prev{
        color: var(--bs-primary-color);
        border: 1px solid var(--bs-primary-color);
        border-radius: 50%;
        width: 50px;
        height: 50px;
        padding: 16px;
    }
    .gallary-swiper-parent .swiper-button-prev::after, .gallary-swiper-parent .swiper-button-next::after{
        font-size: 24px;
        font-weight: 900;
    }
</style>    

<!-- Swiper -->
- var imgs = ["./assets/details-1.webp","./assets/details-2.webp","./assets/details-3.webp","./assets/details-4.webp","./assets/details-5.webp","./assets/details-6.webp","./assets/details-7.webp","./assets/details-8.webp","./assets/details-9.webp","./assets/details-10.webp","./assets/details-11.webp","./assets/details-12.webp"]

<div class="gallary-swiper-parent">
    <div style="position: absolute; top: 6px; left: -6px; padding-left: 24px; padding-right: 60px; clip-path: polygon(0% 0%, 75% 0%, 100% 50%, 75% 100%, 0% 100%); z-index: 22; background-color: var(--bs-primary-color); color: white; font-size: 20px;">10% <div style="font-size: 16px; margin-bottom:8px;">توفير</div></div>
    <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff;" class="swiper myGallarySwiper2">
        <div class="swiper-wrapper">
            each img in imgs
                <div class="swiper-slide">
                    <img src="#{img}" />
                </div>
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination text-white"></div>
    </div>
    <div thumbsSlider="" class="swiper myGallarySwiper">
        <div class="swiper-wrapper">
            each img in imgs
                <div class="swiper-slide">
                    <img src="#{img}" />
                </div>
        </div>
    </div>
</div>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script>
.
    var swiper = new Swiper(".myGallarySwiper", {
    loop: false,
    spaceBetween: 10,
    slidesPerView: "auto",
    freeMode: true,
    watchSlidesProgress: true,
    });
    var swiper2 = new Swiper(".myGallarySwiper2", {
    pagination: {
        el: ".swiper-pagination",
        type: "fraction",
    },
    keyboard: {
        enabled: true,
    },
    loop: false,
    spaceBetween: 10,
    navigation: {
        nextEl: ".swiper-button-prev",
        prevEl: ".swiper-button-next",
    },
    thumbs: {
        swiper: swiper,
    },
    });
</script>