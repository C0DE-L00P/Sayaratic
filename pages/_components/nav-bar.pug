mixin nav-bar(selected)
    <style>
    .
        .nav-bar {
            box-shadow: 0 3px 5px #80808029;
        }
        .nav-bar .navbar {
            padding-top: 0.4rem;
            padding-bottom: 0.4rem;
        }
        .nav-bar .navbar-expand-lg .navbar-nav .nav-link {
            margin-left: 30px;
            font-weight: 500;
            padding-right: 0;
            padding-left: 0;
            font-size: 18px;
            line-height: 1.2;
            color: #cccccc;
        }
        .nav-bar .navbar-expand-lg .navbar-nav .nav-link:hover {
            color: #113250 !important;
        }
        .nav-bar .active {
            color: #113250 !important;
            border-bottom: 2px solid #ff5700;
        }
        .nav-bar .btn-outline-success {
            color: #ff5700;
            border-color: #ff5700;
        }
        .nav-bar .btn-outline-success:hover {
            color: #fff;
            background: #ff5700;
        }
    </style>

    <div class="nav-bar">
        <nav class="navbar navbar-expand-lg ">
            <div class="container-fluid">
                <a class="navbar-brand" href="./home.html">
                    <img src="../assets/logo.png" width="55px" style="margin-left: 30px;" alt="logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link #{selected === 'home' && 'active'}" aria-current="page" href="./index.html">الرئيسية</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link #{selected === 'new' && 'active'}" href="./new.html">سيارات جديدة</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link #{selected === 'used' && 'active'}" href="./used.html">سيارات مستعملة</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link #{selected === 'parts' && 'active'}" href="./parts.html">قطع الغيار</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link #{selected === 'care' && 'active'}" href="./care.html">خدمات العناية</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link #{selected === 'contact' && 'active'}" href="./contact.html">تواصل معنا</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <button class="btn btn-outline-success" type="submit">تسجيل الدخول</button>
                    </form>
                </div>
            </div>
        </nav>
    </div>