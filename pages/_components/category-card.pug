mixin category-card(title,subtitle,icon,img,url)
    <a class="text-decoration-none col-12 col-md-4 mx-0 px-0 text-clickable" href="#{url}">
        <div class="__category-card-div" style="background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url(#{img}); background-size: cover; background-position: center center;">
            <div class="__category-card-icon"><i class="mx-auto #{icon}" style="margin-top: 10px;"></i></div>
            <h3>#{title}</h3>
            <div class="__category-card-btn">
                <span class="__category-card-btn-span bg-primary py-2 fs-7">#{subtitle}</span>
                <i class="fas fa-angle-double-right px-2 fs-6 mb-2"></i>
            </div>
        </div>
    </a>