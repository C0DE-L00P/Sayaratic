include _components/slider-h
include _components/slider-v
include _components/car-card
include _components/slider-offers-3
include _components/nav-bar

- var services = [{title: "لمعة كاملة للسيارة",img: "../assets/service-1.jpg", cost: 750,discount: 300,isNew: true},{title: "لمعة كاملة للسيارة",img: "../assets/car-3.png", cost: 750,discount: 300,isNew: true},{title: "لمعة كاملة للسيارة",img: "../assets/car-3.png", cost: 750,discount: 300,isNew: true},{title: "لمعة كاملة للسيارة",img: "../assets/car-3.png", cost: 750,discount: 300,isNew: true},{title: "لمعة كاملة للسيارة",img: "../assets/car-3.png", cost: 750,discount: 300,isNew: true}]


doctype html
html(lang="ar",dir="rtl")
    head
        include _components/shared-head
        link(rel="stylesheet", href="../css/used.css")
        title خدمات العناية
    body 
        +nav-bar("care")
        
        <div class="position-relative mb-4" style="height: calc(100% - 78px)">
            +slider-v(true,[
                "../assets/slider-1.jpg",
                "../assets/slider-2.jpg",
                "../assets/slider-3.jpg",
                "../assets/slider-4.jpg",
            ])
            <div class="position-absolute top-0 bottom-0 right-0 left-0 d-flex align-items-center justify-content-center w-100" style="z-index: 10;flex-direction: column;">
                <h3 class="text-white d-block">جاهز لبدء رحلتك <span class="text-primary h1">!</span></h3>
                <form class="row">
                    <div class="col-auto">
                        <label for="inputSearch" class="visually-hidden">Search</label>
                        <input type="text" class="form-control p-2 px-4 placeholder-secondary placeholder-sm" id="inputSearch" placeholder="ابحث عن الموديل او نوع المركبة الذي تريده">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary mb-3 p-2 px-4"><span class="d-none d-md-inline-block mx-2">البحث الآن </span><i class="fas fa-magnifying-glass"></i></button>
                    </div>
                </form>
                
                <div class="text-white" style="display: flex; flex-direction: column; gap: 8px;  position: absolute; left: 16px; bottom: 10px; align-items: center; justify-content: center; z-index: 11;">
                    <i class="fa-brands cursor-pointer fa-whatsapp"></i>
                    <i class="fa-brands cursor-pointer fa-twitter"></i>
                    <i class="fa-brands cursor-pointer fa-facebook-f"></i>
                    <i class="fa-brands cursor-pointer fa-youtube"></i>
                    <i class="fa-brands cursor-pointer fa-instagram"></i>
                </div>
            </div>
        </div>

        <div class="container d-flex flex-column">
            h1(style="border-bottom: 2px solid #e7e7e7;", class="text-primary h3 fw-bold pb-2 mt-4 mb-2 d-block mx-auto") عروض خدمة العناية
            <div style="display: grid; grid-template-columns: repeat(auto-fit,340px); gap: 24px; place-content: center center;" class="my-4">
                each service, index in services
                    <div class="overflow-hidden rounded-2" style="border: 0.5px solid var(--bs-grey-200)">
                        <div class="position-relative">
                            <img src="#{service.img}" alt="#{service.title} img" style="width: 100%;height: 210px; object-fit: cover;"/>
                            <!-- غير كلمة جديد دي خليها واضحه اكتر -->
                            <h3 class="text-white position-absolute fs-4" style="bottom: 8px; right: 8px;">#{service.title} <span class="#{service.isNew?'d-inline-block':'d-none'} text-primary fs-6 mx-2"> جديد </span></h3>  
                        </div>
                        <div class="py-2 px-4">
                            <span class="w-100 d-flex flex-row gap-4 fs-7 my-2"><span>التفاصيل</span><i class="flex-grow-1"style="background-color: rgba(204, 204, 204, 0.55);height: 1px;border-radius: 8px;"></i></span>
                            <div class="row">
                                <div class="col-4 d-inline-block">
                                    p(class="text-semi-secondary m-0 fs-7 p-0") شامل الضريبة 
                                    p(class="text-primary m-0 fs-4 p-0 pb-2") #{service.cost - service.discount}.00
                                    p(class="text-semi-secondary fs-7") ريال 
                                </div>
                                <div class="col-4 d-inline-block">
                                    p(class="text-semi-secondary m-0 fs-7 p-0") بدلاً من 
                                    p(class="text-dark m-0 fs-4 p-0 pb-2 text-decoration-line-through") #{service.cost}.00
                                    p(class="text-primary fs-7") توفير #{service.discount} ريال
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
        

