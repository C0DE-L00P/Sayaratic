include _components/slider-h
include _components/slider-tabs
include _components/slider-v
include _components/car-card
include _components/slider-offers-3
include _components/nav-bar


doctype html
html(lang="ar",dir="rtl")
    head
        include _components/shared-head
        link(rel="stylesheet", href="../css/used.css")
        title قطع الغيار
    body 
        +nav-bar("parts")
        <div class="position-relative" style="height: calc(100% - 78px)">
            +slider-v(true,[
                "../assets/slider-1.jpg",
                "../assets/slider-2.jpg",
                "../assets/slider-3.jpg",
                "../assets/slider-4.jpg",
            ])
            <div class="position-absolute top-0 bottom-0 right-0 left-0 d-flex align-items-center justify-content-center w-100" style="z-index: 10;flex-direction: column;">
                <h3 class="text-white d-block">كل اللي تحتاجه تلاقيه <span class="text-primary h1">!</span></h3>
                <form class="row">
                    <div class="col-auto">
                        <label for="inputSearch" class="visually-hidden">Search</label>
                        <input type="text" class="form-control p-2 px-4 placeholder-secondary placeholder-sm" id="inputSearch" placeholder="ابحث عن الموديل او نوع المركبة الذي تريده">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary mb-3 p-2 px-4"><span class="d-none d-md-inline-block mx-2">البحث الآن </span><i class="fas fa-magnifying-glass"></i></button>
                    </div>
                </form>
                
                <div class="text-white" style="display: flex; flex-direction: column; gap: 8px;  position: absolute; left: 16px; bottom: 10px; align-items: center; justify-content: center; z-index: 11;">
                    <i class="fa-brands cursor-pointer fa-whatsapp"></i>
                    <i class="fa-brands cursor-pointer fa-twitter"></i>
                    <i class="fa-brands cursor-pointer fa-facebook-f"></i>
                    <i class="fa-brands cursor-pointer fa-youtube"></i>
                    <i class="fa-brands cursor-pointer fa-instagram"></i>
                </div>
        </div>
    </div>

    //- TODO make toggle for filter modal
    <div class="row">
        <div class="col-0 d-none d-md-inline-block col-md-3">
            <h3 class="text-primary py-2" style="margin-top: 40px; margin-bottom: 20px;"><span class="text-white bg-primary pt-4 ps-1 pe-3" style="border-radius: 100% 0% 0% 100% / 80% 4% 0% 20%;"> فلتر </span>البحث</h3>
            <div class="p-4">
                <!-- first filter -->
                <div class="bg-secondary rounded-2 my-3">
                    each choice,index in [{title: "إطارات من BBC",count: 2512},{title: "إطارات من BBC",count: 2512},{title: "إطارات من BBC",count: 2512},{title: "إطارات من BBC",count: 2512},{title: "إطارات من BBC",count: 2512}]
                        <div class="w-100 d-flex px-4 py-2 justify-content-between">
                            <div>
                                <input type="radio" name="rad-manufacturer" id="#{choice.title}"/>
                                <label for="#{choice.title}" class="fs-6-5 fw-semibold" style="margin-inline-start: 8px;">#{choice.title}</label>
                            </div>
                            <span class="text-primary fs-7" >(#{choice.count})</span>
                        </div>
                    p(class="text-clickable text-center w-100 text-primary mt-2") عرض المزيد
                </div>
                <!-- second filter -->
                <div class="bg-secondary rounded-2 my-3">
                    each choice,index in [{title: "مقاس 250 * 20",count: 2512},{title: "مقاس 210 * 20",count: 2512},{title: "مقاس 250 * 15",count: 2512}]
                        <div class="w-100 d-flex px-4 py-2 justify-content-between">
                            <div>
                                <input type="radio" name="rad-size" id="#{choice.title}"/>
                                <label for="#{choice.title}" class="fs-6-5 fw-semibold" style="margin-inline-start: 8px;">#{choice.title}</label>
                            </div>
                            <span class="text-primary fs-7" >(#{choice.count})</span>
                        </div>
                    p(class="text-clickable text-center w-100 text-primary mt-2") عرض المزيد
                </div>
                <!-- third filter -->
                <div class="bg-secondary rounded-2 my-3">
                    each choice,index in [{title: "2022",count: 2512},{title: "2021",count: 2512},{title: "2020",count: 2512},{title: "2019",count: 2512}]
                        <div class="w-100 d-flex px-4 py-2 justify-content-between">
                            <div>
                                <input type="radio" name="rad-model-year" id="#{choice.title}"/>
                                <label for="#{choice.title}" class="fs-6-5 fw-semibold" style="margin-inline-start: 8px;">#{choice.title}</label>
                            </div>
                            <span class="text-primary fs-7" >(#{choice.count})</span>
                        </div>
                    p(class="text-clickable text-center w-100 text-primary mt-2") عرض المزيد
                </div>
                <button class="btn btn-primary w-100"> اظهر النتائج ( 520 )</button>
            </div>
        </div>
        <div class="col-12 col-md-9">
            +slider-tabs(["الإطارات","الفرامل والأقمشة",'الصدامات والشبوك','المكائن والقيرات',"الشمعات والاصطبات","الأبواب والنوافذ",'الكشافات والأضواء'])
        </div>
    </div>
